// Online C compiler to run C program online
//adding 2 numbers in  USING PONTERS
#include <stdio.h>

int main() {
    
    int a = 8;
    int b = 6;
    
    int *ptr1 = &a;
    int *ptr2 = &b;
    
    *ptr1 = *ptr1 + *ptr2;
    *ptr2 = *ptr1 - *ptr2;
    *ptr1 = *ptr1 - *ptr2;
    
    printf("%d %d\n", *ptr1, *ptr2);  // Print both swapped values
    
    return 0;
}
